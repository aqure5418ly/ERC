<?xml version="1.0" encoding="utf-8"?>
<Items>
  <!-- 
    ================================================================
    ERC ABSTRACT BASE ITEMS (抽象基类)
    所有具体物品都应继承此类，以统一物理属性和价格系数
    ================================================================
  -->

  <!-- 基础容器模板 -->
  <Item identifier="ERC_BaseContainer" category="Hidden" tags="container" description="" scale="0.5" fireproof="true" waterproof="true" impactsoundtag="impact_metal_heavy">
    
    <Price baseprice="100" sold="false">
      <Price storeidentifier="merchantoutpost" multiplier="1.2" />
      <Price storeidentifier="merchantcity" multiplier="1.0" />
      <Price storeidentifier="merchantresearch" multiplier="1.3" />
      <Price storeidentifier="merchantmilitary" multiplier="1.1" />
      <Price storeidentifier="merchantmine" multiplier="1.5" />
    </Price>

    <!-- 占位贴图 (防止 "Item has no sprite" 报错) -->
    <Sprite texture="%ModDir%/Images/Containers/cratelvl1.png" depth="0.55" sourcerect="0,0,512,512" origin="0.5,0.5" />

    <Body width="100" height="50" density="20" />
    <Holdable slots="RightHand+LeftHand" holdpos="0,-50" handle1="-10,0" handle2="10,0" aimable="false" msg="ItemMsgPickUpSelect" />
  </Item>

  <!-- 基础手持装备模板 -->
  <Item identifier="ERC_BaseGear" category="Hidden" tags="smallitem" scale="0.5" fireproof="true" waterproof="true">
    <Price baseprice="50" sold="false" />
    
    <!-- 占位贴图 -->
    <Sprite texture="%ModDir%/Images/Containers/cratelvl1.png" depth="0.55" sourcerect="0,0,512,512" origin="0.5,0.5" />
    
    <Body width="50" height="30" density="15" />
    <Holdable slots="Any,RightHand,LeftHand" msg="ItemMsgPickUpSelect" />
  </Item>

</Items>