<Item identifier="ERC_toolbox" category="Equipment" tags="mediumitem,mobilecontainer,tool,wrench,screwdriver,toolbox" scale="0.15" fireproof="true" impactsoundtag="impact_metal_heavy" addedrepairspeedmultiplier="1">
  
  <Price baseprice="1400" sold="false" />
  
  <!-- 分解配方: 钢筋 -->
