  <!-- 1. ERC_elite_ammounit (精兵弹药单元) -->
  <Item identifier="ERC_elite_ammounit" category="Equipment" tags="smallitem,mobilecontainer" scale="0.3" fireproof="true" waterproof="true">
    <Price baseprice="200" sold="true">
      <Price storeidentifier="merchantoutpost" multiplier="1.1" minavailable="2" />
      <Price storeidentifier="merchantcity" multiplier="1.25" minavailable="4" />
      <Price storeidentifier="merchantresearch" multiplier="1.0" minavailable="2" />
      <Price storeidentifier="merchantmilitary" multiplier="0.8" minavailable="4" />
      <Price storeidentifier="merchantmine" multiplier="1.1" minavailable="1" />
    </Price>
    <Sprite texture="%ModDir%/Images/Containers/ERC_EliteAmmoUnit.png" depth="0.6" sourcerect="0,0,150,161" origin="0.5,0.5" />
    <Body width="80" height="50" density="10" />

    <Holdable slots="Any,RightHand,LeftHand" holdpos="0,-20" msg="ItemMsgPickUpSelect" />
    <Deconstruct time="10">
      <Item identifier="steel" amount="1" />
      <Item identifier="organicfiber" amount="1" />
      <Item identifier="plastic" amount="1" />
    </Deconstruct>

    <Fabricate suitablefabricators="fabricator" requiredtime="20">
      <RequiredSkill identifier="mechanical" level="30" />
      <RequiredItem identifier="titaniumaluminiumalloy" amount="1" />
      <RequiredItem identifier="ballisticfiber" amount="1" />
      <RequiredItem identifier="organicfiber" amount="2" />
      <RequiredItem identifier="plastic" amount="2" />
    </Fabricate>
    <!-- 特性: 适配EA弹药，且使用 SubContainer 实现堆叠数+2 -->
  <!-- 容量修正: 主容器 capacity=0, 子容器=9 -->
  <ItemContainer capacity="0" maxstacksize="1" ExtraStackSize="2" slotsperrow="3" canbeselected="true" hideitems="true" msg="ItemMsgInteractSelect">
    <GuiFrame relativesize="0.15,0.25" anchor="Center" style="ItemUI" />
    
    <!-- MaxStackSize="64": 强制设定该容器内物品最大堆叠数为64 -->
    <SubContainer capacity="9" slotsperrow="3" maxstacksize="64" >
      <SlotIcon texture="Content/UI/StatusMonitorUI.png" sourcerect="256,448,64,64" origin="0.5,0.5" />
      <Containable identifiers="ammobox,coilgunammo,railgunammo,depthchargeammo,explosive,grenade,harpoonammo,revolverammo,pistolammoitem,smgammo,demolitionsexpert,mobilebattery,shotgunammo,stungunammo,reactorfuel,assaultrifleammo,nitroglycerin,ehaammo,rifleammo,magazine" 
                   excludeditems="mobilecontainer,toolbelt,toolbox,ERC_elite_storageunit,ERC_elite_medicalunit" />
    </SubContainer>
  </ItemContainer>
  </Item>


