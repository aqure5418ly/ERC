      <Affliction identifier="stun" strength="1" />
      <StatusEffect type="OnUse" target="UseTarget">
        <Conditional entitytype="eq Character" />
        <Sound file="Content/Items/Weapons/Smack1.ogg" selectionmode="random" range="500" />
